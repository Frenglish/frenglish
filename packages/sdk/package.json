{
    "name": "@frenglish/sdk",
    "version": "1.0.5",
    "description": "SDK for Frenglish translation service",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./types": {
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "clean": "rm -rf dist",
        "build": "pnpm run clean && tsc",
        "prepare": "pnpm run build",
        "test": "jest",
        "docs": "typedoc packages/sdk/src --out docs/sdk"
    },
    "keywords": [
        "sdk",
        "translation",
        "frenglish"
    ],
    "author": "viv-cheung",
    "license": "MIT",
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^27.0.0",
        "@types/node": "^22.5.4",
        "happy-dom": "^16.8.1",
        "jest": "^27.0.0",
        "ts-jest": "^27.0.0",
        "typescript": "^5.8.2"
    },
    "dependencies": {
        "@frenglish/utils": "workspace:*",
        "dotenv": "^16.4.5",
        "glob": "8.0.3",
        "glob-promise": "^6.0.7",
        "minimatch": "^10.0.1",
        "vitest": "^3.0.4",
        "yargs": "^17.7.2"
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    }
}
