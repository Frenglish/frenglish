{
    "compilerOptions": {
      "declaration": true,
      "module": "commonjs",
      "target": "ES2020",
      "outDir": "./dist",
      "moduleResolution": "node",
      "typeRoots": ["./node_modules/@types", "./types"],
      "types": ["node"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "src/*": ["packages/*"],
        "utils/*": ["packages/utils/*"]
      }
    },
    "include": ["packages/**/*", "tests", "packages/utils/config", "packages/utils/src/utils/files.ts", "packages/utils/src/types", "packages/utils/src/utils/config.ts", "packages/utils/src/utils/utils.ts"],
    "exclude": ["node_modules", "dist"]
  }
  